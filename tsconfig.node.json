{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@*": ["./src/*"],
      "@lib": ["./src/lib"],
      "@components/*": ["components/*"],
      "@types": ["./src/types"],
      "@assets": ["./src/assets"],
      "@pages": ["./src/pages"],
    }
  },
  "include": ["vite.config.ts"]
}
